//- page-header.pug
mixin pageHeader(domain, seq, desc)
  h1(class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl")
    span(class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400") #{domain} 
    | #{seq}
  p(class="text-lg font-normal text-gray-500 lg:text-xl dark:text-gray-400") #{desc} 
    if domain== 'all'
      span &nbsp;
    else if seq == ''
      a(href=`/` title=`${t('navigate.up')}`) 🔼
    else 
      a(href=`#` onclick='history.back();' title=`${t('navigate.back')}`) ⏪ 
      span &nbsp;
      a(href=`/${domain}` title=`${t('navigate.up')}`) 🔼
      
  br
  br  